
@{
    ViewBag.Title = "Lista de productos";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Productos</h2>
        <ol class="breadcrumb">
            <li>Administración del sistema</li>
            <li class="active">
                <strong>Lista de productos</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    @*<button class="btn btn-w-m btn-warning" data-toggle="modal" data-target="#registrarProductoModal" id="btnRegistrarProducto"><i class="fa fa-plus"></i> Nuevo producto</button>*@
                    <a href="@Url.Action("ProductoAgregar","Admin")" class="btn btn-w-m btn-warning" title="Regresar"><i class="fa fa-plus"></i> Nuevo producto</a>
                    <br /><br />
                    <table id="tblProductos" class="table table-stripped" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th data-priority="1">Código</th>
                                <th class="none">Código barra</th>
                                <th data-priority="2">Nombre</th>
                                <th data-priority="3">Pieza</th>
                                <th>Descripción</th>
                                <th>Color</th>
                                <th>Capacidad</th>
                                <th>Material</th>
                                <th>Medida</th>
                                <th data-priority="4">Categoría</th>
                                <th data-priority="5">Estatus</th>
                                <th data-priority="6" class="all">Acción</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>
<!-- Modal Nuevo producto -->
@Html.Partial("Producto/_registrarProducto")
<!-- Modal imagen producto -->
@Html.Partial("Producto/_imagenProducto")
<!-- Modal editar producto -->
@Html.Partial("Producto/_editarProducto")

@section Styles {

}

@section Scripts {
    

<script>
        Dropzone.autoDiscover = false;
    </script>
<script src="~/Scripts/mvc/admin/producto/producto.js"></script> 
}
