<div class="modal fade" id="registrarBannerModal" tabindex="-1" role="dialog" aria-labelledby="registrarBannerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="registrarBannerModalLabel">Registrar nuevo banner</h1> <span class="small text-warning"> (tamaño recomendado 2,000 x 600 pixeles)</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="CategoriaRegistrarBanner" class="col-form-label">Categoría: <span class="label label-primary" id="CategoriaRegistrarBanner"></span></label>
                    <input type="hidden" class="form-control" id="CategoriaIdRegistrarBanner" name="CategoriaIdRegistrarBanner">
                </div>
                <form id="formRegistrarBanner" action="#" enctype="multipart/form-data" class="dropzone">
                    <div class="fallback">
                        <input name="file" type="file" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-w-m btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>